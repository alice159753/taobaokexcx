.page
{
    background: -webkit-linear-gradient(left, #f8a6cb , #f8a6cc); /* Safari 5.1 - 6.0 */
    background: -o-linear-gradient(right, #f8a6cb, #f8a6cc); /* Opera 11.1 - 12.0 */
    background: -moz-linear-gradient(right, #f8a6cb, #f8a6cc); /* Firefox 3.6 - 15 */
    background: linear-gradient(to right, #f8a6cb , #f8a6cc); /* 标准的语法（必须放在最后） */

}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
}

.usermotto {
  margin-top: 200px;
}

.helpOut {
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
}
.helpOut .help {
  margin: 0 auto;
  width: 680rpx;
}
.helpOut .help .single {
  width: 680rpx;
  height: 110rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f2f2f2;
  position: relative;
}
.helpOut .help .single .single_pic {
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
  -moz-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
  -o-transform: translateY(-50%);
  transform: translateY(-50%);
  left: 0;
}
.helpOut .help .single .single_project {
  font-size: 30rpx;
  color: #666666;
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
  -moz-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
  -o-transform: translateY(-50%);
  transform: translateY(-50%);
  left: 70rpx;
}
.helpOut .help .single .arrow_r {
  width: 15rpx;
  height: 26rpx;
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
  -moz-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
  -o-transform: translateY(-50%);
  transform: translateY(-50%);
  right: 0;
}
